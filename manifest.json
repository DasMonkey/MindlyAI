{
  "manifest_version": 3,
  "name": "Mentelo",
  "version": "1.0.0",
  "description": "Hybrid AI content assistant powered by Chrome Built-in AI (Gemini Nano) with Cloud API fallback. Features: grammar checking, translation, summarization, content generation - all with privacy-first, offline-capable AI.",
  "trial_tokens": [
    "AnOF81ySJZPCHXsshQFYY/VchjDK9kEzG1eLF6jFrL4AG/Iy9Bko+H+K9Qt/Ry0/3sOB3xPU9ALWJCqhwVQyFg8AAABxeyJvcmlnaW4iOiJjaHJvbWUtZXh0ZW5zaW9uOi8vY2RjY2RqYWJna2Zvb3BnYmJhY29kaGxmbGViZGhkamoiLCJmZWF0dXJlIjoiQUlQcm9vZnJlYWRlckFQSSIsImV4cGlyeSI6MTc3OTE0ODgwMH0="
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "sidePanel",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Mentelo",
    "default_icon": {
      "16": "icons/Mentelo-logo-wh.png",
      "32": "icons/Mentelo-logo-wh.png",
      "48": "icons/Mentelo-logo-wh.png",
      "128": "icons/Mentelo-logo-wh.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["provider-status-ui.js", "content.js", "textfield-assistant.js", "grammar-checker.js", "gemini-live-connection.js", "audio-processor.js", "youtube-summary.js"],
      "css": ["content.css", "textfield-assistant.css", "grammar-checker.css", "gemini-live-modal.css", "youtube-summary.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["file:///*.pdf", "*://*/*.pdf"],
      "js": ["pdf-content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png", 
        "sidepanel.html", 
        "gemini-live-modal.html", 
        "gemini-live-page-script.js", 
        "audio-bridge.html", 
        "microphone-processor.js",
        "ai-provider-manager.js",
        "builtin-ai-provider.js",
        "cloud-ai-provider.js",
        "provider-status-ui.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/Mentelo-logo-wh.png",
    "32": "icons/Mentelo-logo-wh.png",
    "48": "icons/Mentelo-logo-wh.png",
    "128": "icons/Mentelo-logo-wh.png"
  }
}
